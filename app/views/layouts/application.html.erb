<!DOCTYPE html>
<html>
  <head>
     
    <title>InstaRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


  <style type="text/css">
  html,body{
    padding: 0;
    margin:0;
    font-family: sans-serif;
  }
 
  .instarails{
    background-color: #F08080;
  }
 
  .instarails ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }
 
  .instarails > ul > li {
    float: left;
  }
 
  
  .instarails li a {
    display: inline-block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
  }
 
  .instarails li a:hover{
    background-color: #2525ff;
  } 
 
  li.dropdown {
    display: inline-block;
  }
 
  .dropdown:hover .isi-dropdown {
    display: block;
  }
 
  .isi-dropdown a:hover {
    color: #fff !important;
  }
 
  .isi-dropdown {
    position: absolute;
    display: none;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
    background-color: #f9f9f9;
  }
 
  .isi-dropdown a {
    color: #3c3c3c !important;
  }
 
  .isi-dropdown a:hover {
    color: #232323 !important;
    background: #f3f3f3 !important;
  }
</style>
  </head>
 <body>
 
<header class="header">
  <div class="instarails">
 
    <ul>

      <li><b><a style="font-size: 30px;">InstaRails</a></b></li>

      <li class="dropdown" style="float: right; font-size: 15px;">
          <a href="#"><%= user_signed_in? ? current_user.name : 'halo guest' %></a>

        <ul class="isi-dropdown">
          <% if user_signed_in? %>
              <li><a href="/posts/new">New Post</a></li>
              <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
          <% else %>
              <li><%= link_to 'Daftar', new_user_registration_path %></li>
              <li><%= link_to 'Login', new_user_session_path %></li>
          <% end %>
        </ul>
      </li>

    </ul>
 
  </div>
</header>

   
    <%= yield %>
  </body>
</html>
